<%= simple_form_for([ @app,  @klass,  @attribute ], :html => {:class => 'form-vertical'}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
		<%= f.input :typus, :collection => Kattribute.types %>
    <%= f.input :description %>
  </div>

  <div class="clear">
    <%= f.button :submit %>
  </div>
<% end %>
