<h2 class="span12">Attributes</h2>
<table class="span8 clean-borders">
	<tr>
		<th> Name </th>
		<th> Type </th>
		<th> Operations </th>
	</tr>

	<% klass.kattributes.each { |attribute| %>
		<tr>
			<td> <%= attribute.name %> </td>
			<td> <%= attribute.typus %> </td>
			<td>
				<%= link_to raw('<i class="icon-eye-open"></i> Show'), app_klass_kattribute_path( app, klass, attribute ) %> ,
				<%= link_to raw('<i class="icon-edit"></i> Edit'), edit_app_klass_kattribute_path(app, klass, attribute) %> ,
				<%= link_to raw('<i class="icon-trash"></i> Destroy'), app_klass_kattribute_path( app, klass, attribute), confirm: 'Are you sure?', method: :delete %>
			</td>
		</tr>
	<% } %>

	<tr>
		<td> </td>
		<td> </td>
		<td>
			<% if klass.id != nil %>
			<%= link_to raw('<i class="icon-plus"></i> Create new attribute'), new_app_klass_kattribute_path( app, klass) %>
			<% end %>
		</td>
	</tr>
</table>

