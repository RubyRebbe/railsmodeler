	<% klass.sources.each { |assoc| %>
		<tr> 
			<td> <%= klass.direction( assoc) %> </td>
			<td> <%= assoc.typus %> </td>
			<td> <%= assoc.name %> </td>
			<td>
				<%= link_to 'Show', app_kassociation_path( app, assoc ) %> ,
