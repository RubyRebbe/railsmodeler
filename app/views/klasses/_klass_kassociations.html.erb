<table class="span8 clean-borders">
	<tr>
		<th> Direction </th>
		<th> Type </th>
		<th> Signature </th>
		<th> Operations </th>
	</tr>

	<% klass.sources.each { |assoc| %>
		<tr>
			<td> <%= klass.direction( assoc) %> </td>
			<td> <%= assoc.typus %> </td>
			<td> <%= assoc.name %> </td>
			<td>
				<%= link_to raw('<i class="icon-eye-open"></i> Show'), app_kassociation_path( app, assoc ) %> &nbsp;
				<%= link_to raw('<i class="icon-edit"></i> Edit'), edit_app_kassociation_path( app, assoc ) %> &nbsp;
				<%= link_to raw('<i class="icon-trash"></i> Destroy'), app_kassociation_path( app, assoc ), confirm: 'Are you sure?', method: :delete %>
			</td>
		</tr>
	<% } %>

	<% klass.targets.each { |assoc| %>
		<tr>
			<td> <%= klass.direction( assoc) %> </td>
			<td> <%= assoc.typus %> </td>
			<td> <%= assoc.name %> </td>
			<td>
				<%= link_to raw('<i class="icon-eye-open"></i> Show'), app_kassociation_path( app, assoc ) %> &nbsp;
				<%= link_to raw('<i class="icon-edit"></i> Edit'), edit_app_kassociation_path( app, assoc ) %> &nbsp;
				<%= link_to raw('<i class="icon-trash"></i> Destroy'), app_kassociation_path( app, assoc ), confirm: 'Are you sure?', method: :delete %>
			</td>
		</tr>
	<% } %>

	<tr>
		<td> </td>
		<td> </td>
		<td> </td>
		<td>
			<% if klass.id != nil then %>
				<%= link_to raw('<i class="icon-plus"></i> Create new association'), new_app_kassociation_path( app) %></td>
			<% end %>
		</td>
	</tr>

	</table>
