<%= simple_form_for( [ @app, @klass ]) do |f| %>
  <%= f.error_notification %>

  <div class="inputs">
    <%= f.input :name %>
    <%= f.input :description %>
		<%= f.simple_fields_for :attributes do |af| %>
			<%= af.input :name, :label => 'attribute name:' %>
		<% end %>
  </div>

  <div class="actions">
    <%= f.button :submit %>
  </div>
<% end %>

<br />
<strong> Attributes in class <%= @klass.name %> </strong>
<br />

<%= render :partial => "klass_attributes", :locals => { :app => @app, :klass => @klass } %>

