		</tr>

	<% app = klass.app %>
	<% klass.attributes.each { |attribute| %>
		<tr> 
			<td> <%= attribute.name %> </td>
			<td> <%= attribute.typus %> </td>
			<td>
				<%= link_to 'Show', app_klass_attribute_path( app, klass, attribute ) %> ,
				<%= link_to 'Edit', edit_app_klass_attribute_path(app, klass, attribute) %> ,
				<%= link_to 'Destroy', app_klass_attribute_path( app, klass, attribute), 
					confirm: 'Are you sure?', method: :delete %>
			</td>
		</tr>
	<% } %>

		<tr>
			<td> </td>
			<td> </td>
			<td> 
			  <%= link_to 'create a new attribute', 
					new_app_klass_attribute( app, klass) %> 
			</td>
